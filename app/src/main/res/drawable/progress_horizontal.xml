<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#E2E0E0"
                android:centerColor="#E2E0E0"
                android:centerY="0.75"
                android:endColor="#E2E0E0"
                android:angle="270"
                />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#FE8000"
                    android:centerColor="#FE8000"
                    android:centerY="0.75"
                    android:endColor="#FE8000"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>